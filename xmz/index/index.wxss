/* pages/index/index.wxss */

.user-header{
  padding: 53rpx 0 55rpx 40rpx;
  background:url('https://xmz.h5vx.cn/img/longge/bg-user.png');
  background-size: cover;
}
.user-header .edit{
  text-align: right;
  margin:0 40rpx 70rpx;
}
.user-header .edit .icon{
  width: 44rpx;
  height: 44rpx;
}
.userCard{
  display: flex;
  align-items: center;
  flex-direction: row;
  justify-content: space-between;
}
.userCard .account{
  display: flex;
  align-items: center;
}
.userCard .account .avatar{
  width: 124rpx;
  height: 124rpx;
  border-radius: 100%;
  border: solid 5rpx #fff;
  margin-right: 20rpx;
}
.userCard .account .info{
  flex: 1;
   color:rgba(255,255,255,1);
}
.userCard .account .userName{
  font-size:40rpx;
  line-height:58rpx;
}
.userCard .account .vipLevel{
  font-size:26rpx;
  line-height:30rpx;
}
.userCard .account .desc{
  font-size:24rpx;
  line-height: 1;
  margin-top: 10rpx;
}
.icon-vip{
   width: 34rpx;
  height: 38rpx;
  display: inline-block;
  vertical-align: -10rpx;
}
.icon-vip-jk{
  background:url('https://xmz.h5vx.cn/img/longge/icon-vip.png');
  background-size: cover
}
.btn-login{
  width:116rpx !important;
  height:50rpx !important;
  line-height: 50rpx;
  display: inline-block;
  background:rgba(55,66,72,1);
  border-radius: 25rpx 0 0 25rpx;
  font-size:26rpx;
  color:rgba(255,255,255,1);
  text-align: center;
  padding: 0;
  font-weight: 400;
  min-height: 50rpx !important;
  overflow: hidden;
}

.xmz-menu{
  display: flex;
  flex-wrap: wrap;
  margin: -7rpx -7rpx 0;
}
.xmz-menu .item{
  box-sizing: border-box;
  width: 33.33%;
  padding: 7rpx;
}
.xmz-menu .item .link{
  padding: 36rpx 0 28rpx;
  background: #fff;
  box-shadow:0px 0px 20rpx 0px rgba(9,46,58,0.15);
  border-radius:14rpx;
  text-align: center;
}
.xmz-menu .item .icon{
  width: 88rpx;
  height: 88rpx;
  vertical-align: top;
}
.xmz-menu .item .title{
  height:30rpx;
  font-size:26rpx;
  color:rgba(0,0,0,1);
  line-height:30rpx;
  margin-top: 12rpx;
}
.xmz-title{
  padding: 20rpx 0;
  height:53rpx;
  font-size:35rpx;
  color:rgba(29,166,197,1);
  line-height:53rpx;
  text-align: center;
  position: relative;
}
.xmz-title:before,.xmz-title:after{
  content: "";
  display: inline-block;
  width:25rpx;
  height:3rpx;
  background:rgba(29,166,197,1);
  position: absolute;
  left: 50%;
  top: 50%;
  margin-top: -2rpx;
  
}
.xmz-title:before{
  margin-left: -110rpx;
}
.xmz-title:after{
  margin-left: 85rpx;
}
.xmz-banner{
  height: 255rpx;
  border-radius: 10rpx;
  overflow: hidden;
}
.xmz-banner-img {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}