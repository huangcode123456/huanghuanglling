/* pages/ pointsMall/index/index.wxss */
.pm-header{
  padding: 40rpx 0 125rpx 40rpx;
  background:url('https://xmz.h5vx.cn/img/longge/bg-jfsc.png');
  background-size: cover;
}

.userCard{
  display: flex;
  align-items: center;
  flex-direction: row;
  justify-content: space-between;
}
.userCard .account{
  display: flex;
  align-items: center;
}
.userCard .account .avatar{
  width: 124rpx;
  height: 124rpx;
  border-radius: 100%;
  border: solid 5rpx #fff;
  margin-right: 20rpx;
}
.userCard .account .info{
  flex: 1;
   color:rgba(255,255,255,1);
}
.userCard .account .total{
  font-size:32rpx;
  line-height:58rpx;
}
.userCard .account .vipLevel{
  font-size:26rpx;
  line-height:30rpx;
}
.userCard .account .desc{
  font-size:24rpx;
  line-height: 1;
  margin-top: 10rpx;
}
.icon-vip{
   width: 34rpx;
  height: 38rpx;
  display: inline-block;
  vertical-align: -10rpx;
}
.icon-vip-jk{
  background:url('https://xmz.h5vx.cn/img/longge/icon-vip.png');
  background-size: cover
}
.btn-help{
  width:136rpx;
  height:50rpx;
  line-height: 50rpx;
  display: inline-block;
  background:rgba(37,131,175,1);
  border-radius: 25rpx 0 0 25rpx;
  font-size:26rpx;
  color:rgba(255,255,255,1);
  text-align: center;
}


/* xmz-box */
.xmz-box{
  background:rgba(255,255,255,1);
  box-shadow:0px 0px 20rpx 0px rgba(9,46,58,0.15);
  border-radius:14rpx;
}
.xmz-box .xmz-box-title{
  height: 84rpx;
  line-height: 84rpx;
  padding-left: 24rpx;
  font-size:30rpx;
  color:rgba(32,32,32,1);
}

/* 菜单 */
.xmz-box-menu{
  display: flex;
  flex-wrap: wrap;
  padding:0 10rpx 20rpx;
}
.xmz-box-menu .item{
  box-sizing: border-box;
  width: 25%;
}
.xmz-box-rows3.xmz-box-menu .item{
  width: 33.333%
}
.xmz-box-menu .item .link{
  text-align: center;
  padding: 10rpx 0 20rpx;
}
.xmz-box-menu .item .icon{
  width: 88rpx;
  height: 88rpx;
  vertical-align: top;
}
.xmz-box-menu .item .title{
  height:25rpx;
  font-size:23rpx;
  color:rgba(8,8,8,1);
  line-height:25rpx;
  margin-top: 10rpx
}

/* banner */
.xmz-banner{
  height: 255rpx;
  border-radius: 10rpx;
  overflow: hidden;
}
.xmz-banner-img {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}