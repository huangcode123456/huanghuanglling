/* pages/pointsMall/gift/list/list.wxss */
.product-list{
  display: flex;
  margin: -8rpx;
  flex-wrap: wrap;
}
.product-list .item{
  flex: 0 0 50%;
  padding: 8rpx;
  box-sizing: border-box;
 
}
.product-list .item .link{
  background:rgba(255,255,255,1);
  border-radius:7rpx;
  overflow: hidden;
}
.product-list .item .pic{
  width: 100%;
  height: 245.4rpx;
  vertical-align: top;
}

.product-list .item  .title{
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
  font-size:24rpx;
  height: 36rpx;
  line-height: 36rpx;
  color:rgba(8,8,8,1);
  padding:0 10rpx;
  margin-top: 10rpx;

}
.product-list .item .desc{
  display: flex;
  padding: 0 10rpx 10rpx;

}


.product-list .item .desc .point{
  color:rgba(251,143,16,1);
  font-size:24rpx;
  line-height:35rpx;
  flex: 1;
}
.product-list .item .btn{
  width:85rpx;
  height:35rpx;
  background:linear-gradient(90deg,rgba(79,188,188,1),rgba(3,154,202,1));
  border-radius:35rpx;
  font-size:26rpx;
  color:rgba(255,255,255,1);
  display: inline-block;
  text-align: center;
}