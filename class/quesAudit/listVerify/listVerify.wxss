/* pages/class/quesAudit/listVerify/listVerify.wxss */
@import '/components/gsd-ui/static/style/main.wxss';
.header {
  padding: 20rpx 20rpx 50rpx;
  color: #fff;
  background-image: linear-gradient(to bottom, #0f59a4 36%, #2775b6 100%);
  border-bottom-left-radius: 100rpx 20rpx;
  border-bottom-right-radius: 100rpx 20rpx;
}

.header .schoolTitle{
  margin-top: 20rpx;
  font-size: 40rpx;
  font-weight: 600;
  color: #fff;
  line-height: 56rpx;
  text-align: center
}
.header .schoolSubTitle{
    text-align: center;
    margin-top: 20rpx;
}
.text-data-end{
  text-align: center;
  padding: 30rpx 30rpx 180rpx;
  color: #aaa;
  font-size: 30rpx;
}


/* 全选/多选重构 */
.check-selectAll{
  padding: 19rpx 0;
  font-size: 28rpx;
  font-weight: 800;
  color: #333;
  
}

.btn-group-verify{
  padding: 20rpx 30rpx;
  display: flex;
}
.btn-group-verify .btn{
  flex: 1;
  margin-left: 30rpx;
}

.check-item{
  position: relative;
  margin:0 40rpx;
  padding: 22rpx 0;
  display: flex;
  align-items: center;
}
.check-item:after {
  height: 1px;
  width: auto;
  transform: scaleY(0.5);
  left: 0;
  right: 0;
  content: '';
  position: absolute;
  background-color: rgba(0, 0, 0, 0.1);
  bottom: 0;
}

.item-content{
  flex: 1;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding-left: 20rpx;
}
.check-item .label{
  font-size: 32rpx;
  font-weight: normal;
  line-height: 44rpx;
  color: #101F30;
  width: 500rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}
.check-item .arrow-right{
  color: #ccc
}